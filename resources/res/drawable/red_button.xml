<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#bc0000" android:endColor="#560000" android:angle="270"/>
            <stroke android:width="3dp" android:color="#151515"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#cc0000" android:endColor="#660000" android:angle="270"/>
            <stroke android:width="3dp" android:color="#202020"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>
