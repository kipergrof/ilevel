<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#00bc00" android:endColor="#005600" android:angle="270"/>
            <stroke android:width="3dp" android:color="#151515"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#00cc00" android:endColor="#006600" android:angle="270"/>
            <stroke android:width="3dp" android:color="#202020"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>
